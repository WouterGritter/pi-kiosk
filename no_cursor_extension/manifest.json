{
  "manifest_version": 2,
  "name": "No cursor",
  "version": "1.0",
  "description": "Disable the cursor",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["activeTab"]
}
